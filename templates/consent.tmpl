{{define "consent.tmpl"}}
  {{template "layout.start" .}}

  <h1 class="h4 mb-1">Authorize application</h1>
  <p class="text-muted mb-4">Application: {{.ClientName}}</p>

  {{if .Error}}
    <div class="alert alert-danger" role="alert">{{.Error}}</div>
  {{end}}

  <form method="post" action="/api/v1/authorize/consent">
    <input type="hidden" name="client_id" value="{{.ClientID}}" />
    <input type="hidden" name="redirect_uri" value="{{.RedirectURI}}" />
    <input type="hidden" name="response_type" value="{{.ResponseType}}" />
    <input type="hidden" name="state" value="{{.State}}" />
    <input type="hidden" name="email" value="{{.Email}}" />
    <input type="hidden" name="code_challenge" value="{{.CodeChallenge}}" />
    <input type="hidden" name="code_challenge_method" value="{{.CodeChallengeMethod}}" />

    {{if .Scopes}}
      <div class="mb-3">
        <div class="form-text mb-2">Select the scopes to allow:</div>
        {{range .Scopes}}
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="scopes"
              id="scope-{{.}}"
              value="{{.}}"
              {{if contains $.SelectedScopes .}}checked{{end}}
            />
            <label class="form-check-label" for="scope-{{.}}">{{.}}</label>
          </div>
        {{end}}
      </div>
    {{else}}
      <div class="text-muted mb-3">No scopes requested.</div>
    {{end}}

    <button type="submit" class="btn btn-success">Authorize</button>
  </form>

  {{template "layout.end" .}}
{{end}}
