{{define "docs.tmpl"}}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Documentation - OAuth Mock</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .docs-content h1 { font-size: 2rem; margin-top: 0; margin-bottom: 1.5rem; }
      .docs-content h2 { font-size: 1.5rem; margin-top: 2rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid #dee2e6; }
      .docs-content h3 { font-size: 1.25rem; margin-top: 1.5rem; margin-bottom: 0.75rem; }
      .docs-content pre { background: #f8f9fa; padding: 1rem; border-radius: 0.375rem; overflow-x: auto; }
      .docs-content code { color: #d63384; }
      .docs-content pre code { color: inherit; }
      .docs-content table { width: 100%; margin-bottom: 1rem; }
      .docs-content table th, .docs-content table td { padding: 0.5rem; border: 1px solid #dee2e6; }
      .docs-content table th { background: #f8f9fa; }
      .docs-content blockquote { border-left: 4px solid #dee2e6; padding-left: 1rem; color: #6c757d; }
      .docs-content ul, .docs-content ol { padding-left: 1.5rem; }
      .docs-content li { margin-bottom: 0.25rem; }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">OAuth Mock</a>
        <div class="navbar-collapse d-flex justify-content-between">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/docs">Docs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/swagger/index.html" target="_blank">Swagger</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/.well-known/openid-configuration" target="_blank">Discovery</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="https://github.com/lucasGlmt/oauth_mock" target="_blank">GitHub</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container py-4">
      <div class="card shadow-sm">
        <div class="card-body p-4 docs-content">
          {{.Content}}
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
{{end}}
