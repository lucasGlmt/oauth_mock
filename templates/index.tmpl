{{define "index.tmpl"}}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>OAuth Mock</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .hero { padding: 4rem 0; }
      .feature-icon {
        width: 4rem;
        height: 4rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }
      .endpoint-card { transition: transform 0.2s; }
      .endpoint-card:hover { transform: translateY(-2px); }
      code { background: #f8f9fa; padding: 0.2rem 0.4rem; border-radius: 0.25rem; }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container">
        <a class="navbar-brand" href="/">OAuth Mock</a>
        <div class="navbar-collapse d-flex justify-content-between">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/docs">Docs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/swagger/index.html" target="_blank">Swagger</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/.well-known/openid-configuration" target="_blank">Discovery</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="https://github.com/lucasGlmt/oauth_mock" target="_blank">GitHub</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="hero bg-white border-bottom">
      <div class="container text-center">
        <h1 class="display-5 fw-bold">OAuth Mock</h1>
        <p class="lead text-muted mb-4">
          A lightweight OAuth2/OpenID Connect mock server for development and testing
        </p>
        <div class="d-flex gap-2 justify-content-center">
          <a href="/docs" class="btn btn-primary btn-lg">Documentation</a>
          <a href="/swagger/index.html" class="btn btn-outline-secondary btn-lg" target="_blank">Swagger UI</a>
        </div>
      </div>
    </div>

    <div class="container py-5">
      <h2 class="text-center mb-4">Features</h2>
      <div class="row g-4 mb-5">
        <div class="col-md-4">
          <div class="text-center">
            <div class="feature-icon bg-primary bg-gradient text-white mx-auto">üîê</div>
            <h5>Authorization Code Flow</h5>
            <p class="text-muted">Complete OAuth2 flow with login and consent screens</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="text-center">
            <div class="feature-icon bg-success bg-gradient text-white mx-auto">üõ°Ô∏è</div>
            <h5>PKCE Support</h5>
            <p class="text-muted">S256 and plain methods for public clients</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="text-center">
            <div class="feature-icon bg-info bg-gradient text-white mx-auto">üé´</div>
            <h5>JWT ID Tokens</h5>
            <p class="text-muted">RS256 signed tokens with JWKS endpoint</p>
          </div>
        </div>
      </div>

      <h2 class="text-center mb-4">Quick Start</h2>
      <div class="row g-4 mb-5">
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header">1. Start Authorization</div>
            <div class="card-body">
              <pre class="mb-0"><code>GET /api/v1/authorize
  ?response_type=code
  &client_id=1
  &redirect_uri=http://localhost:3000
  &scope=openid email
  &state=random</code></pre>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header">2. Exchange Code for Tokens</div>
            <div class="card-body">
              <pre class="mb-0"><code>POST /api/v1/token
  grant_type=authorization_code
  &code=mock-...
  &client_id=1
  &redirect_uri=http://localhost:3000</code></pre>
            </div>
          </div>
        </div>
      </div>

      <h2 class="text-center mb-4">Endpoints</h2>
      <div class="row g-3">
        <div class="col-md-6 col-lg-4">
          <a href="/.well-known/openid-configuration" target="_blank" class="text-decoration-none">
            <div class="card endpoint-card h-100">
              <div class="card-body">
                <span class="badge bg-success mb-2">GET</span>
                <h6 class="card-title mb-1">/.well-known/openid-configuration</h6>
                <p class="card-text text-muted small mb-0">OIDC Discovery</p>
              </div>
            </div>
          </a>
        </div>
        <div class="col-md-6 col-lg-4">
          <a href="/.well-known/jwks.json" target="_blank" class="text-decoration-none">
            <div class="card endpoint-card h-100">
              <div class="card-body">
                <span class="badge bg-success mb-2">GET</span>
                <h6 class="card-title mb-1">/.well-known/jwks.json</h6>
                <p class="card-text text-muted small mb-0">JSON Web Key Set</p>
              </div>
            </div>
          </a>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card endpoint-card h-100">
            <div class="card-body">
              <span class="badge bg-success mb-2">GET</span>
              <h6 class="card-title mb-1">/api/v1/authorize</h6>
              <p class="card-text text-muted small mb-0">Start authorization flow</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card endpoint-card h-100">
            <div class="card-body">
              <span class="badge bg-primary mb-2">POST</span>
              <h6 class="card-title mb-1">/api/v1/token</h6>
              <p class="card-text text-muted small mb-0">Exchange code/refresh token</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card endpoint-card h-100">
            <div class="card-body">
              <span class="badge bg-success mb-2">GET</span>
              <h6 class="card-title mb-1">/api/v1/userinfo</h6>
              <p class="card-text text-muted small mb-0">Get user information</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <a href="/api/v1/ping" target="_blank" class="text-decoration-none">
            <div class="card endpoint-card h-100">
              <div class="card-body">
                <span class="badge bg-success mb-2">GET</span>
                <h6 class="card-title mb-1">/api/v1/ping</h6>
                <p class="card-text text-muted small mb-0">Health check</p>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>

    <footer class="bg-white border-top py-4 mt-5">
      <div class="container text-center text-muted">
        <small>OAuth Mock ‚Äî For development and testing purposes only</small>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
{{end}}
